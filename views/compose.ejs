<%- include("partials/header"); -%>

<form action="/compose" method="post">
    <h1>Compose</h1>
    <div class="form-group">
        <label for="titleField">Title</label>
        <br>
        <input type="text" class="form-control" id="titleField" name="postTitle" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="postField">Post</label>
        <br>
        <textarea type="text" class="form-control" name="postBody" id="postField" rows="5" cols="30"
            autocomplete="off"></textarea>
    </div>

    <button type="button submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>